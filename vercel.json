{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/index.js"
        },
        {
            "source": "/health",
            "destination": "/backend/index.js"
        }
    ],
    "functions": {
        "backend/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}